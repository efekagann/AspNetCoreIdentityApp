
@{
    ViewData["Title"] = "Index";
}
@model List<AdminModel.RoleViewModel>

<div class="row">

    <div class="col-md-6 offset-md-2">

        <h2>Roller</h2>

    </div>

    <div class="col-md-2">
        <a class="btn btn-primary" asp-controller="Roles" asp-action="RoleCreate" asp-area="Admin">Rol Ekle</a>
    </div>

    <div class=" row">
        <div class="col-md-8 offset-md-2">

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-info" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Role İsmi</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-warning btn-sm" asp-area="Admin" asp-controller="Roles" asp-action="RoleUpdate" asp-route-id="@item.Id">Rol Güncelle</a>
                                <a class="btn btn-warning btn-sm my-1" asp-area="Admin" asp-controller="Roles" asp-action="RoleDelete" asp-route-id="@item.Id">Rol Sil</a>
                            </td>
                        </tr>
                    }


                </tbody>

            </table>

        </div>
    </div>

</div>

